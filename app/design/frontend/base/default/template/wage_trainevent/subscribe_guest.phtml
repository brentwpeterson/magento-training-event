<input type="text" name="guest_email" id="guest_email" class="input-text validate-email required-entry" size="30" />
<input type="hidden" name="product_id" value="<?php echo Mage::registry('product')->getId()?>" />
<input type="hidden" name="<?php echo Mage_Core_Controller_Front_Action::PARAM_NAME_URL_ENCODED ?>" value="<?php echo Mage::helper('wage_trainevent/trainevent')->getEncodedUrl()?>" />
