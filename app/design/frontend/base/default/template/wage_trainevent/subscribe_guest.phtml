 <script type="text/javascript">
    function send_alert_email(url)
    {
        var f = $('product_addtocart_form');
        var validator = new Validation(f);
        if (validator.validate()) {
            f.action = url;
            f.id = 'trainevent_product_addtocart_form';
            f.submit();
            $('button-email-send').remove();
            return true;  
        }
        return false;
    }

</script>

